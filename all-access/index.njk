<style>
    .what-you-get li {
        margin-block-start: 1rem;
    }

    .cta-container {
        margin-block-start: 2rem;
        padding: 2rem;
        background: linear-gradient(135deg, rgba(255, 229, 62, 0.1) 0%, rgba(255, 229, 62, 0.05) 100%);
        border: 2px solid #FFE53E;
        border-radius: 12px;
        text-align: center;
    }

    .cta-button {
        display: inline-block;
        padding: 1rem 2.5rem;
        background-color: #FFE53E;
        color: #000;
        text-decoration: none;
        font-weight: 900;
        font-size: 1.25rem;
        font-family: 'Raleway', sans-serif;
        border-radius: 8px;
