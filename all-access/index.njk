        background-color: #fff;
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(255, 229, 62, 0.5);
    }

    .cta-tagline {
        font-size: 1.1rem;
        color: #f8f9fa;
        font-weight: 600;
        margin-block: 0;
        line-height: 1.5;
    }

    .cta-tagline strong {
        color: #FFE53E;
    }

    .cta-note {
        font-size: 0.75rem;
    }

    /* Mobile: centered layout */
    .hero-section {
        text-align: center;
    }

    .hero-image {
        float: none;
        display: block;
        margin: 0 auto 1rem auto !important;
    }

    /* Desktop: float right, left-aligned text */
    @media screen and (min-width: 768px) {
        .hero-section {
            text-align: left;
        }

        .hero-image {
            float: right;
            margin: 1rem;
        }
    }

    @media screen and (max-width: 767px) {
        .cta-note {
            margin-block-start: 0.5rem;
        }
    }
</style>
<script>
  // Remove the 'New' badge from all-access link when on the all-access page
  document.addEventListener('DOMContentLoaded', function() {
    const navLinks = document.querySelectorAll('nav ul li a');
    const allAccessLink = navLinks[navLinks.length - 1]; // Get the last link

    if (allAccessLink && allAccessLink.getAttribute('href').includes('all-access')) {
      allAccessLink.style.setProperty('display', 'inline', 'important');
    }

    // Remove ::before and ::after pseudo-elements by overriding them
    const style = document.createElement('style');
    style.textContent = `
      .all-access::before,
      .all-access::after {
        display: none !important;
      }
    `;
    document.head.appendChild(style);
  });
</script>
{% endblock %}
