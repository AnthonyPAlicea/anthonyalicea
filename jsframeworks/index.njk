<script>
  document.addEventListener('DOMContentLoaded', function() {
    const gear = document.querySelector('.gear-background');
    let rotation = 0;
    let isRotating = true;
    let lastTime = 0;
    
    function rotateGear(timestamp) {
        if (!lastTime) lastTime = timestamp;
        
        // Check if we need to toggle rotation state (every 1000ms)
        if (timestamp - lastTime >= 1000) {
            isRotating = !isRotating;
            lastTime = timestamp;
            
            if (isRotating) {
                rotation += 15; // Exactly 15 degrees per second
                gear.style.transform = `translateY(-50%) rotate(${rotation}deg)`;
            }
        }
        
        requestAnimationFrame(rotateGear);
    }
    
    requestAnimationFrame(rotateGear);
  });
</script>
