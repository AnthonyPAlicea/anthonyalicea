<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    {# Google Schema #}
    <meta itemprop="name" content="{% if metaTitle %}{{ metaTitle }}{{ ' | '}}{% endif %}{% if title %}{{ title }}{{ ' | '}}{% endif %}{% if site.name %}{{ site.name }}{% endif %}">
    <meta itemprop="description" content="{% if excerpt %}{{ excerpt }}{% else %}{{ site.description }}{% endif %}">

    {# Twitter #}
    <meta name="twitter:title" content="{% if metaTitle %}{{ metaTitle }}{{ ' | '}}{% endif %}{% if title %}{{ title }}{{ ' | '}}{% endif %}{% if site.name %}{{ site.name }}{% endif %}">
    <meta name="twitter:card" content="{% if og_image %}summary_large_image{% else %}summary_large_image{% endif %}">
    <meta name="twitter:description" content="{% if excerpt %}{{ excerpt }}{% else %}{{ site.description }}{% endif %}">
    <meta name="twitter:site" content="{{ site.author.handle }}">
    <meta name="twitter:creator" content="{{ site.author.handle }}">
    <meta name="twitter:image" content="{{ site.url }}{{ site.baseUrl }}{% if og_image %}{{ og_image }}{% else %}{{ site.images.twitter }}{% endif %}">

    {# Open Graph #}
    <meta property="og:title" content="{% if metaTitle %}{{ metaTitle }}{{ ' | '}}{% endif %}{% if title %}{{ title }}{{ ' | '}}{% endif %}{% if site.name %}{{ site.name }}{% endif %}">
    <meta property="og:description" content="{% if excerpt %}{{ excerpt }}{% else %}{{ site.description }}{% endif %}">
    <meta property="og:image" content="{{ site.url }}{{ site.baseUrl }}{% if og_image %}{{ og_image }}{% else %}{{ site.images.og }}{% endif %}">
    <meta property="og:url" content="{{ site.url }}{{ page.url }}">
    <meta property="og:site_name" content="{{ site.name }}">
    <meta property="og:locale" content="en_US">
    <meta property="og:type" content="website">

    <link rel="icon" type="image/x-icon" href="{{ site.baseUrl }}assets/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="{{ site.baseUrl }}assets/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="{{ site.baseUrl }}assets/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="{{ site.baseUrl }}assets/favicon-16x16.png">
    <link rel="mask-icon" href="{{ site.baseUrl }}assets/safari-pinned-tab.svg" color="#5bbad5">
    <meta name="msapplication-TileColor" content="#da532c">
    <meta name="theme-color" content="#ffffff">

    <title>{% if metaTitle %}{{ metaTitle }}{% else %}{{ title }}{% endif %}{% if metaTitle or title %} | {% endif %}{{ site.name }}</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@400;700;900&family=Noto+Sans:wght@400;700&display=swap" rel="stylesheet">

    <link href="https://unpkg.com/prismjs@1.28.0/themes/prism-tomorrow.css" rel="stylesheet">

    <link rel="stylesheet" href="{{ site.baseUrl }}assets/main.css">
<style>
      /* New badge for all-access link */
      .all-access {
        position: relative;
      }

      .all-access::before {
        content: "NEW";
        position: relative;
        display: inline-block;
        font-size: 0.65em;
        font-weight: 700;
        padding: 0.15em 0.4em;
        margin-right: 0.5em;
        vertical-align: middle;
        border-radius: 3px;
        background: linear-gradient(135deg, #ffd700, #ffed4e, #ffd700);
        background-size: 200% 200%;
        color: #1a1a1a;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        animation: shimmer 2.5s ease-in-out infinite;
        box-shadow: 0 0 8px rgba(255, 215, 0, 0.4);
      }

      .all-access::after {
        content: "âœ¦";
        position: absolute;
        font-size: 0.5em;
        color: #ffd700;
        opacity: 0;
        animation: sparkle 2.5s ease-in-out infinite;
        pointer-events: none;
      }

      @keyframes shimmer {
        0%, 100% {
          background-position: 0% 50%;
          filter: brightness(1) hue-rotate(0deg);
        }
        25% {
          background-position: 50% 50%;
          filter: brightness(1.2) hue-rotate(5deg);
        }
        50% {
          background-position: 100% 50%;
          filter: brightness(1.3) hue-rotate(10deg);
        }
        75% {
          background-position: 50% 50%;
          filter: brightness(1.2) hue-rotate(5deg);
        }
      }

      @keyframes sparkle {
        0%, 100% {
          opacity: 0;
          transform: translate(0, 0) scale(0.8);
        }
        15% {
          opacity: 1;
          transform: translate(-8px, -6px) scale(1);
        }
        30% {
          opacity: 0;
          transform: translate(-10px, -8px) scale(0.8);
        }
        50% {
          opacity: 1;
          transform: translate(8px, -5px) scale(1);
        }
        65% {
          opacity: 0;
          transform: translate(10px, -7px) scale(0.8);
        }
      }

      /* Countdown Banner Styles */
      .countdown-banner {
        background: var(--color-small-background);
        color: white;
        padding: 0.5em 1em;
        text-align: center;
        font-size: 0.9em;
        font-weight: 600;
      }

      .countdown-banner p {
        margin: 0;
      }

      .countdown-banner a {
        color: white;
        text-decoration: underline;
      }

      .countdown-banner a:hover {
        opacity: 0.8;
      }
    </style>
    {% block head %}
    
    {% endblock %}
  </head>
  <body>
    <nav>
      <a href="{{ site.baseUrl }}"><img src="/assets/tonyalicea.png" alt="Home" /></a>
      <ul>
        <li><a href="{{ site.baseUrl }}courses">courses</a></li>
        <li><a href="{{ site.baseUrl }}newsletter">newsletter</a></li>
        <li><a href="{{ site.baseUrl }}blog">blog</a></li>
        <li><a href="{{ site.baseUrl }}all-access">all access</a></li>
      </ul>
    </nav>
    <div id="countdown-banner" class="countdown-banner">
      <p>ðŸŽ‰ <i>AI-Assisted Dev</i> and <i>JS Frameworks</i> Courses on Sale at <a href="https://dontimitate.dev/courses/new-course-bundle/" target="_blank" rel="noopener noreferrer">dontimitate.dev</a> â€” <span id="countdown-days">0</span>d <span id="countdown-hours">0</span>h <span id="countdown-minutes">0</span>m <span id="countdown-seconds">0</span>s</p>
    </div>

    <script>
      function initCountdown() {
        const targetDate = new Date('2025-12-03T05:01:00Z').getTime();
        const bannerEl = document.getElementById('countdown-banner');

        function updateCountdown() {
          const now = new Date().getTime();
          const timeLeft = targetDate - now;

          if (timeLeft < 0) {
            bannerEl.style.display = 'none';
            return;
          }

          const days = Math.floor(timeLeft / (1000 * 60 * 60 * 24));
          const hours = Math.floor((timeLeft % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
          const minutes = Math.floor((timeLeft % (1000 * 60 * 60)) / (1000 * 60));
          const seconds = Math.floor((timeLeft % (1000 * 60)) / 1000);

          document.getElementById('countdown-days').textContent = days;
          document.getElementById('countdown-hours').textContent = hours;
          document.getElementById('countdown-minutes').textContent = minutes;
          document.getElementById('countdown-seconds').textContent = seconds;
        }

        updateCountdown();
        setInterval(updateCountdown, 1000);
      }

      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', initCountdown);
      } else {
        initCountdown();
      }
    </script>
    <main>
      {% block body %}{% endblock %}
    </main>
    <footer>
      <div class="footer-content">
        <p>&copy; {% year %} Tony Alicea. All rights reserved.</p>
        <p><a href="https://tonyalicea.dev">tonyalicea.dev</a></p>
        <p><a href="/projects" class="newsletter-link">Projects</a> | <a href="/newsletter" class="newsletter-link">Join my newsletter</a> | <a href="/work-with-me" class="newsletter-link">Work with me</a></p>
      </div>
    </footer>
    <script src="https://unpkg.com/clipboard@2/dist/clipboard.min.js"></script>
    <script src="{{ site.baseUrl }}assets/main.js"></script>
  </body>
</html>