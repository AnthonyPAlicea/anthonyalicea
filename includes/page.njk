<style>
      /* New badge for all-access link */
      .all-access {
        position: relative;
      }

      .all-access::before {
        content: "NEW";
        position: relative;
        display: inline-block;
        font-size: 0.65em;
        font-weight: 700;
        padding: 0.15em 0.4em;
        margin-right: 0.5em;
        vertical-align: middle;
        border-radius: 3px;
        background: linear-gradient(135deg, #ffd700, #ffed4e, #ffd700);
        background-size: 200% 200%;
        color: #1a1a1a;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        animation: shimmer 2.5s ease-in-out infinite;
        box-shadow: 0 0 8px rgba(255, 215, 0, 0.4);
      }

      .all-access::after {
        content: "âœ¦";
        position: absolute;
        font-size: 0.5em;
        color: #ffd700;
        opacity: 0;
        animation: sparkle 2.5s ease-in-out infinite;
        pointer-events: none;
      }

      @keyframes shimmer {
        0%, 100% {
          background-position: 0% 50%;
          filter: brightness(1) hue-rotate(0deg);
        }
        25% {
          background-position: 50% 50%;
          filter: brightness(1.2) hue-rotate(5deg);
        }
        50% {
          background-position: 100% 50%;
          filter: brightness(1.3) hue-rotate(10deg);
        }
        75% {
          background-position: 50% 50%;
          filter: brightness(1.2) hue-rotate(5deg);
        }
      }

      @keyframes sparkle {
        0%, 100% {
          opacity: 0;
          transform: translate(0, 0) scale(0.8);
        }
        15% {
          opacity: 1;
          transform: translate(-8px, -6px) scale(1);
        }
        30% {
          opacity: 0;
          transform: translate(-10px, -8px) scale(0.8);
        }
        50% {
          opacity: 1;
          transform: translate(8px, -5px) scale(1);
        }
        65% {
          opacity: 0;
          transform: translate(10px, -7px) scale(0.8);
        }
      }

      /* Countdown Banner Styles */
      .countdown-banner {
        background: linear-gradient(135deg, rgba(48, 49, 54, 0.6) 0%, rgba(0, 56, 109, 0.4) 100%);
        border: 1px solid #444;
        color: var(--color-text);
        padding: 0.5rem 0.75rem;
        text-align: center;
        font-size: 0.75rem;
        margin-bottom: .625rem;
        display: flex;
        flex-direction: column;
        gap: 0.35rem;
        align-items: center;
      }

      .countdown-banner__tag {
        font-weight: 600;
        color: var(--color-highlight);
        font-size: 0.75rem;
      }

      .countdown-banner__timer {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.3rem;
        flex-wrap: wrap;
      }

      .countdown-banner__time-unit {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.15rem;
      }

      .countdown-banner__time-value {
        background-color: var(--color-highlight);
        color: #000;
        font-weight: 700;
        padding: 0.15rem 0.4rem;
        border-radius: 3px;
        min-width: 1.5rem;
        text-align: center;
        font-size: 0.8rem;
      }

      .countdown-banner__time-label {
        font-size: 0.55rem;
        color: rgba(248, 249, 250, 0.7);
        text-transform: lowercase;
        font-weight: 500;
      }

      .countdown-banner__separator {
        color: var(--color-highlight);
        font-weight: 700;
        line-height: 1;
        height: 1.1rem;
        display: flex;
        align-items: center;
        font-size: 0.75rem;
      }

      .countdown-banner__ctas {
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
        margin-top: 0.2rem;
      }

      .countdown-banner__ctas br {
        display: none;
      }

      .countdown-banner__ctas a {
        color: var(--color-highlight);
        text-decoration: none;
        font-weight: 600;
        font-size: 0.65rem;
        transition: opacity 0.2s ease;
      }

      .countdown-banner__ctas a:hover {
        opacity: 0.8;
        text-decoration: underline;
      }

      @media screen and (min-width: 640px) {
        .countdown-banner {
          padding: 0.6rem 1rem;
          gap: 0.45rem;
          font-size: 0.85rem;
        }

        .countdown-banner__tag {
          font-size: 0.85rem;
        }

        .countdown-banner__time-value {
          min-width: 1.7rem;
          padding: 0.2rem 0.5rem;
          font-size: 0.9rem;
        }

        .countdown-banner__timer {
          gap: 0.4rem;
        }

        .countdown-banner__separator {
          font-size: 0.85rem;
        }

        .countdown-banner__ctas a {
          font-size: 0.75rem;
        }
      }
    </style>
